#reading line by line

with open('simple_input_example', 'r') as f:
  text = f.readlines()
  player1 =0
  player2 =0
for line in text:
  question =""
  for x in line:
    if x != ";":
      question = question + x
    else:
      break
  print (question)
  answer = input("What is your answer? ")
  print (answer)
  if answer in line:
    player1 = player1 +1
    print ("Right! You gained one point.")
  else:
    print("Wrong! You gained 0 points.")
    continue
  if player1 == 5:
    print ("Player1 won!")
    break
